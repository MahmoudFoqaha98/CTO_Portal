	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		<div style="margin-top:5%; margin-left:32%; width:55%;">
			@{

				if (ViewBag.RequestPeriod == true)
				{
					<button type="submit" class="btn btn-primary" name="close" value="close"> The Requests period is OPEN, Press to CLOSE</button>
				}
				else
				{
					<button type="submit" class="btn btn-danger" name="open" value="open">The Requests period is CLOSED, Press to OPEN</button>
				}

			}
		</div>
