
@{
	ViewBag.Title = "Admin Dashboard";
	Layout = "~/Views/Shared/_LayoutAdminDashboard.cshtml";

}
<link href="~/Content/CSS/admincards.css" rel="stylesheet" />


<style>

	.card-counter {
		box-shadow: 2px 2px 10px #DADADA;
		margin: 5px;
		padding: 20px 10px;
		background-color: #fff;
		height: 100px;
		border-radius: 5px;
		transition: .3s linear all;
	}

		.card-counter:hover {
			box-shadow: 4px 4px 20px #DADADA;
			transition: .3s linear all;
		}

		.card-counter.primary {
			background-color: #007bff;
			color: #FFF;
		}

		.card-counter.danger {
			background-color: #ef5350;
			color: #FFF;
		}

		.card-counter.success {
			background-color: #66bb6a;
			color: #FFF;
		}

		.card-counter.info {
			background-color: #26c6da;
			color: #FFF;
		}

		.card-counter i {
			font-size: 5em;
			opacity: 0.2;
		}

		.card-counter .count-numbers {
			position: absolute;
			right: 35px;
			top: 80px;
			font-size: 32px;
			display: block;
		}

		.card-counter .count-name {
			position: absolute;
			right: 35px;
			font-style: italic;
			text-transform: capitalize;
			opacity: 0.5;
			display: block;
			font-size: 18px;
		}

	.elem {
		background: blueviolet;
		width: 300px;
		height: 150px;
	}

		.elem:hover {
			opacity: 0.5;
		}

	.card-counter:hover {
		transform: scale(1.05);
		box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
	}
</style>


<div class="container" style="margin-top:10%">
	<div class="row">
		<a class="col-md-4" href="/Home/Groups">
			<div class="card-counter info" style="height:200px;">
				<br />
				<i class="fa fa-users"></i>
				<span class="count-numbers">@ViewBag.CountGroups</span>
				<span class="count-name">Groups</span>
			</div>
		</a>


		<a class="col-md-4" href="/Home/Requests">
			<div class="card-counter danger" style="height:200px;">
				<br />
				<i class="fas fa-envelope-open-text"></i>
				<span class="count-numbers">@ViewBag.CountRequests</span>
				<span class="count-name">Requests</span>
			</div>
		</a>

		<a class="col-md-4" href="/Home/Hospitals">
			<div class="card-counter success" style="height:200px;">
				<br />
				<i class="far fa-hospital"></i>
				<span class="count-numbers">@ViewBag.CountHospitals</span>
				<span class="count-name">Hospitals</span>
			</div>
		</a>
	</div>
</div>


<br />
